#!/usr/bin/env bash
# Configures a new Ubuntu machine by installing Nginx and serving a "Hello World" page on port 80.

# Update package list and install Nginx
sudo apt-get update -y -qq
sudo apt-get install nginx -y

# Start Nginx service
sudo systemctl start nginx

# Allow Nginx through the firewall
sudo ufw allow 'Nginx HTTP'

# Set ownership and permissions for the web directory
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www/html

# Create a backup of the default index file
sudo mv /var/www/html/index.nginx-debian.html /var/www/html/index.nginx-debian.html.bak

# Create a new index file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

# Restart Nginx to apply changes
sudo systemctl restart nginx

echo "Nginx installation and configuration completed."

